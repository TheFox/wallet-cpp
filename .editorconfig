# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cpp,hpp,h,yml,yaml}]
indent_size = 2

[{Makefile,debian/rules}]
indent_style = tab

[Vagrantfile]
indent_style = tab
indent_size = 2
